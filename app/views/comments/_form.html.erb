<%= form_with model: [ @car, @car.comments.build ] do |form| %>
  <%= form.hidden_field :commenter, value: current_user.email %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div>

  <p>
    <%= form.submit %>
  </p>
<% end %>

