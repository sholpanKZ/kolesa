<h1><%= @car.name %></h1>

<% if @car.images.attached? %>
  <% @car.images.each do |image| %>
    <%= image_tag image, {height: "80px", class: "nav-link", style: "border-radius: 5px;"} %>
  <% end %>
<% end %>


<p><b>Price:</b><%= @car.price %></p>

<p>  <b>Color:</b> <%= @car.color %> </p>
<div style="background: <%= @car.color %>; border: 1px solid; width: 10px; height: 10px;"></div>

<p><%= @car.description %></p>

<ul>
  <% if policy(@car).edit? %>
    <li><%= link_to "Edit", edit_car_path(@car) %></li>
  <% end %>
  <% if policy(@car).destroy? %>
    <li><%= link_to "Destroy", car_path(@car), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <% end %>
</ul>

<h2>Comments</h2>
<%= render @car.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
