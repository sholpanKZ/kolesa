<h1>New Car</h1>

<%= form_with model: @car do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>

   <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

   <div>
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </div>

  <div>
    <%= form.submit "Saqtau" %>
  </div>
<% end %>